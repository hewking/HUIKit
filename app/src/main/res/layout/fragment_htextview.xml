<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hewking.custom.textview.HTextView
        android:gravity="center"
        android:padding="@dimen/base_xhdpi"
        android:layout_gravity="center"
        app:dot="true"
        android:textStyle="bold"
        android:text="helloworlddgfdgdgfd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/round_rect_drawable"
        android:id="@+id/tv_image_span"
        android:text="image span 测试"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:paddingBottom="4dp"
        android:gravity="top"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_click_span"
        android:text="image span 测试"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:autoLink="email|phone|web"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_input"
        android:hint="仅仅输入十六进制"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.hewking.custom.textview.HTextView
        android:id="@+id/tv_text_span"
        android:text="https://www.flowchat.me/api/groupShare/inner?code=h2w6mA"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/default_text_size10"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:autoLink="email|phone|web"
        android:layout_marginTop="@dimen/base_xhdpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>